@model SocialMedia

@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">@Model.Title Hesabını Güncelle</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">@Model.Title</div>
				</div>
				<div class="card-body">
					<form method="post">
						<input type="hidden" asp-for="SocialMediaId" />
						<label>Sosyal Medya Adı</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label>URL</label>
						<input type="text" asp-for="Url" class="form-control" />
						<br />
						<label>İcon</label>
						<input type="text" asp-for="Icon" class="form-control" />
						<br />
						<button type="submit" class="btn btn-success">Güncelle</button>
						<a href="/SocialMedia/Index/" class="btn btn-danger">Geri</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


