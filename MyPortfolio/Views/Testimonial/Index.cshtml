@model List<Testimonial>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referanslar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referanslarınnız ile ilgili işlemleri aşağıdan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Resim</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td>
											<form method="post" action="/Testimonial/DeleteTestomnial/@item.TestimonialId">
												<button type="submit" class="btn btn-danger">Sil</button>
											</form>
										</td>
										<td><a href="/Testimonial/UpdateTestomnial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="~/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>