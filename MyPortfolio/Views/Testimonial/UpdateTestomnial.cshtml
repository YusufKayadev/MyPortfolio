@model Testimonial
@{
	ViewData["Title"] = "UpdateTestomnial";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
<div class="container-fluid">
	<h4 class="page-title">Referanslar</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Referans Güncelle</div>
				</div>
				<div class="card-body">

					<form method="post">
						<input type="hidden" asp-for="TestimonialId" />
						<label>Ad Soyad</label>
						<input type="text" asp-for="NameSurname" class="form-control" />
						<br />
						<label>Başlık</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label>Açıklama""</label>
						<input type="text" asp-for="Description" class="form-control" />
						<br />
						<label>Resim Yükle</label>
						<input type="file" name="ImageFile" class="form-control" />
						<br />
						<input type="hidden" asp-for="ImageUrl" />
						<button type="submit" class="btn btn-primary">Güncelle</button>
						<a href="/Testimonial/Index" class="btn btn-danger">Geri</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

</div>
