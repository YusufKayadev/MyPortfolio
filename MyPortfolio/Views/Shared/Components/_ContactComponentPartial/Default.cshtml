@model List<MyPortfolio.DAL.Entities.Contact>

<section id="contact" class="s-contact target-section">
	@foreach (var item in Model)
	{
		<div class="overlay"></div>

		<div class="row narrow section-intro">
			<div class="col-full">
				<h3>İletişim</h3>
				<h1>Bana Ulaş</h1>
				<p class="lead">@item.Titile</p>

			</div>
		</div>

		<div class="row contact__main">
			<div class="col-eight tab-full contact__form">
				<form method="post" asp-controller="Default" asp-action="Message" id="contactForm2">
					<fieldset>

						<div class="form-field">
							<input name="NameSurname" type="text" placeholder="Name" minlength="2" required class="full-width">
						</div>

						<div class="form-field">
							<input name="Email" type="email" placeholder="Email" required class="full-width">
						</div>

						<div class="form-field">
							<input name="Subject" type="text" placeholder="Subject" class="full-width">
						</div>

						<div class="form-field">
							<textarea name="MessageDetail1" placeholder="Message" rows="10" required class="full-width"></textarea>
						</div>

						<div class="form-field">
							<button type="submit" class="full-width btn--primary">Submit</button>
						</div>

					</fieldset>
				</form>


				<!-- contact-warning -->
				<div class="message-warning">
					Something went wrong. Please try again.
				</div>

				<!-- contact-success -->
				<div class="message-success">
					Your message was sent, thank you!<br>
				</div>

			</div>


			<div class="col-four tab-full contact__infos">
				<h4 class="h06">Phone</h4>
				<p>
					@item.Phone1<br>
					@item.Phone2<br>

				</p>

				<h4 class="h06">Email</h4>
				<p>
					@item.Email1<br>
					@item.Email2<br>
				</p>

				<h4 class="h06">Address</h4>
				<p>
					@item.Adress
					<br />
					<br />
				</p>
			</div>

		</div>
	}
</section> 