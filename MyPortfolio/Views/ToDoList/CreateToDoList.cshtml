@model ToDoList
@{
	ViewData["Title"] = "CreateToDoList";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ToDoListId" />
							<label>İçerik</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Resim</label>
							<input type="text" asp-for="ImageURL" class="form-control" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<label>Durum</label>
							<textarea rows="4" asp-for="Status" class="form-control"></textarea>
							<br />
							<button class="btn btn-primary">Yeni İçerik Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

